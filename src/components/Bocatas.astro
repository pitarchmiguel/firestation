];
// Agrupar bocatas por grupo
const bocatasPorGrupo = bocata.reduce((grupos, bocata) => {
  if (!grupos[bocata.grupo]) {
    grupos[bocata.grupo] = [];
  }
  grupos[bocata.grupo].push(bocata);
  return grupos;
}, {});

---

<div class="contenedor">
    <div class="carta">
      <div class="atras">
        <a href="/"><svg  xmlns="http://www.w3.org/2000/svg"  width="36"  height="36"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-arrow-left-dashed"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M5 12h6m3 0h1.5m3 0h.5" /><path d="M5 12l6 6" /><path d="M5 12l6 -6" /></svg></a>
      
      <img class="logo" src="/images/logo_firestation.png" alt="logo" class="logo">
      
      </div>
      {Object.keys(bocatasPorGrupo).map((grupo) => (
        <div class="grupo">
          <h2 class="grupo-title">Grupo {grupo}</h2>
          <div class="grupo-content">
            {bocatasPorGrupo[grupo].map((item) => (
              <div class="product-card">
                <div class="product-info">
                  <h3 class="product-title">{item.name}</h3>
                  <p class="product-description">{item.descripcion}</p>
                  <p class="product-price">{item.price.toFixed(2)} €</p>
                </div>
                {/* <div class="product-image">
                  <img src={item.imagen} alt={item.name} />
                </div> */}
              </div>
            ))}
          </div>
        </div>
      ))}
          
          
    </div>
</div>

<style>

.logo {
  width: 60px;
  height: 60px;
  padding: 10px;
}

.logo img {
  object-fit: cover;
}

.atras {
  position: sticky;
  display: flex;
  justify-content: space-between;
  align-items: center;
  top: 0;
  width: 100%; /* Se ajusta al ancho del contenedor padre */
  background-color: rgb(255, 255, 255); /* Fondo semitransparente (tomato con opacidad) */* Efecto de desenfoque */* Asegura que esté sobre otros elementos */
  padding: 10px; /* Espaciado interno */
}

.atras a {
  display: block;
  color: #333;
  padding: 10px;
}

.grupo-title {
  font-size: 1rem;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
  padding-left: 20px;
}

/* Contenido del grupo */
.contenedor {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.carta {
    width: 100%;
    height: 100vh;
    background-color: var(--gray_050);
    position: relative;
    box-shadow: var(--gray_400);

    overflow: auto;
}

@media (width >= 500px) {

    .carta {
        width: 400px;
        height: 95vh;
        border-radius: 20px;
    }
}
/* Contenedor principal */
.product-card {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-bottom: 1px solid #ddd;
  padding: 16px;
  max-width: 600px;
  margin: auto;
}

/* Información del producto */
.product-info {
  flex: 1;
  margin-right: 16px;
}

.product-title {
  font-size: 1.2rem;
  font-weight: bold;
  margin: 0 0 8px;
  
}

.product-description {
  font-size: 0.9rem;
  color: #666;
  margin: 0 0 12px;
}

.product-price {
  font-size: 1rem;
  font-weight: bold;
  color: #222;
  margin: 0;
}

/* Imagen del producto */
.product-image img {
  width: 80px;
  height: 80px;
  object-fit: cover;
  border-radius: 8px;
  border: 1px solid #ddd;
}
</style>